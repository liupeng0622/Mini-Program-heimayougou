@import "./styles/iconfont.wxss";

/* 微信小程序不支持通配符 “*” */
page, view, text, swiper, swiper-item, image, navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 主题颜色，通过变量来实现。less、原生css、wxss都支持变量 */
page {
  /* 定义主题颜色 */
  --themeColor: #eb4450;
  /* 定义统一字体大小，假设设计稿是 375px，375px = 750rpx，1px = 2rpx，14px = 28rpx */
  font-size: 28rpx;
}

image {
  width: 100%;
}